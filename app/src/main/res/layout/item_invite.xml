<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_invite"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/man"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Dewanshi"
        android:textColor="@color/TopBar"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/img_invite"
        app:layout_constraintStart_toStartOf="@+id/img_invite"
        app:layout_constraintTop_toBottomOf="@+id/img_invite"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_round"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/img_invite"
        app:layout_constraintStart_toStartOf="@+id/img_invite"
        app:layout_constraintTop_toBottomOf="@+id/name">
        
        <TextView
            android:id="@+id/invite_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INVITE"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/img_invite"
            app:layout_constraintStart_toStartOf="@+id/img_invite"
            app:layout_constraintTop_toBottomOf="@+id/img_invite"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>